<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/textSelecciona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Selecciona"
            android:textSize="36dp"
            android:textColor="@color/textColor"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textOpcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="una opción"
            android:textSize="36dp"
            android:textColor="@color/textColor"
            android:gravity="center_horizontal"
            android:layout_below="@id/textIniciar"/>

        <TextView
            android:id="@+id/textRealizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="¿Qué deseas realizar?"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="190dp"
            android:layout_height="170dp"
            android:src="@drawable/icon2"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/buttonAdoptar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:hint="Adoptar"
            android:textColorHint="@color/white" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="190dp"
            android:layout_height="170dp"
            android:src="@drawable/icon3"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/buttonDarenAdopcion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Dar en adopción"
            android:textColorHint="@color/white"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>